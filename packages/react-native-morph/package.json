{
	"name": "react-native-morph",
	"version": "0.1.1",
	"description": "A React Native library",
	"author": "ed <es23jr@gmail.com> (https://github.com/eds2002)",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/eds2002/react-native-morph.git",
		"directory": "packages/react-native-morph"
	},
	"main": "lib/commonjs/index.js",
	"module": "lib/module/index.js",
	"types": "lib/typescript/index.d.ts",
	"react-native": "src/index",
	"exports": {
		".": {
			"react-native": "./src/index.ts",
			"import": "./lib/module/index.js",
			"require": "./lib/commonjs/index.js",
			"types": "./lib/typescript/index.d.ts"
		}
	},
	"scripts": {
		"build": "bob build",
		"lint": "biome check ./src",
		"typecheck": "tsc --noEmit",
		"release": "release-it"
	},
	"keywords": [
		"react-native"
	],
	"files": [
		"lib",
		"src",
		"README.md",
		"LICENSE"
	],
	"peerDependencies": {
		"react": "*",
		"react-native": "*",
		"react-native-reanimated": "*",
		"react-native-screen-transitions": "*",
		"@react-native-masked-view/masked-view": "*"
	},
	"devDependencies": {
		"@react-native-masked-view/masked-view": "^0.3.0",
		"@release-it/conventional-changelog": "^10.0.1",
		"@types/react": "~19.1.10",
		"react-native": "~0.81.5",
		"react-native-builder-bob": "0.40.17",
		"react-native-reanimated": "~4.1.1",
		"react-native-screen-transitions": "^3.2.0-beta.3",
		"release-it": "^19.0.4",
		"typescript": "~5.8.3"
	},
	"react-native-builder-bob": {
		"source": "src",
		"output": "lib",
		"targets": [
			"commonjs",
			"module",
			[
				"typescript",
				{
					"project": "tsconfig.build.json"
				}
			]
		]
	},
	"release-it": {
		"git": {
			"commitMessage": "chore: release ${version}",
			"tagName": "v${version}",
			"commitArgs": [
				"-n"
			]
		},
		"npm": {
			"publish": true
		},
		"github": {
			"release": true,
			"skipChecks": true
		},
		"plugins": {
			"@release-it/conventional-changelog": {
				"preset": {
					"name": "angular"
				},
				"path": "."
			}
		}
	}
}
